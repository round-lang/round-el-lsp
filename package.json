{
	"name": "round-el-lsp",
	"description": "A language server for the Round El programming language",
	"author": "Jerry Will",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/round-lang/round-el"
	},
	"publisher": "jrrwll",
	"categories": [],
	"keywords": [
		"round-el",
		"language-server"
	],
	"engines": {
		"vscode": "^1.100.0"
	},

	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "round-el",
				"aliases": [
					"Round El",
					"round-el"
				],
				"extensions": [
					".el"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "round-el",
				"scopeName": "source.round-el",
				"path": "./syntaxes/round-el.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "round-el.runFile",
				"title": "Run Round El File",
				"category": "Round El"
			}
		],
		"keybindings": [
			{
				"command": "round-el.runFile",
				"key": "F5",
				"mac": "F5",
				"when": "editorLangId == round-el"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "round-el.runFile",
					"when": "editorLangId == round-el",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && pnpm install && cd ../server && pnpm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}